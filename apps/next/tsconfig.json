{
  "extends": "@azem/tsc/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@azem/*": ["../../packages/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.json",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
